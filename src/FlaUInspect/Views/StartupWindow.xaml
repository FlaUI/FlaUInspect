<Window x:Class="FlaUInspect.Views.StartupWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:FlaUInspect.Core.Converters"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:FlaUInspect.Views"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:system="clr-namespace:System;assembly=System.Runtime"
        xmlns:viewModels="clr-namespace:FlaUInspect.ViewModels"
        d:DataContext="{d:DesignInstance viewModels:StartupViewModel}"
        d:DesignHeight="400"
        d:DesignWidth="600"
        mc:Ignorable="d">
    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Resources/ChooseVersionIcons.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:IntToVisibilityConverter x:Key="IntToVisibilityConverter" />
            <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter" />
            <converters:InvertBooleanConverter x:Key="InvertBooleanConverter" />

            <DataTemplate DataType="{x:Type viewModels:SettingsViewModel}">
                <local:SettingsWindow />
            </DataTemplate>
        </ResourceDictionary>
    </Window.Resources>
    <Grid>
        <DockPanel LastChildFill="True">
            <StackPanel DockPanel.Dock="Bottom">
                <Border Height="1"
                        Margin="2"
                        HorizontalAlignment="Stretch"
                        Background="Black" />

                <Grid>
                    <Button Margin="8"
                            Padding="4"
                            HorizontalAlignment="Left"
                            Command="{Binding SettingCommand}"
                            Content="Settings" />
                    <Button Margin="8"
                            Padding="4"
                            HorizontalAlignment="Right"
                            Click="CloseClick"
                            Content="Close" />
                </Grid>
            </StackPanel>
            <Grid IsEnabled="{Binding IsBusy, Converter={StaticResource InvertBooleanConverter}}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <DockPanel Grid.Column="0"
                           Margin="8"
                           LastChildFill="True">
                    <Button Width="250"
                            HorizontalAlignment="Left"
                            Command="{Binding PickCommand}"
                            Content="Find window"
                            DockPanel.Dock="Top"
                            PreviewMouseDown="PickWindowButton_PreviewMouseDown" />
                    <Border Height="1"
                            Margin="0,16"
                            Background="Black"
                            DockPanel.Dock="Top" />
                    <DockPanel LastChildFill="True">
                        <DockPanel Margin="0,4"
                                   DockPanel.Dock="Top"
                                   LastChildFill="True">
                            <TextBlock DockPanel.Dock="Left"
                                       Text="Find:" />
                            <TextBox Margin="8,0,0,0"
                                     Text="{Binding FilterProcess, UpdateSourceTrigger=PropertyChanged}" />
                        </DockPanel>
                        <Grid DockPanel.Dock="Bottom">
                            <CheckBox HorizontalAlignment="Left"
                                      VerticalAlignment="Center"
                                      Content="Windowed only application"
                                      IsChecked="{Binding IsWindowedOnly}" />
                            <Button Margin="4"
                                    Padding="4"
                                    HorizontalAlignment="Right"
                                    Command="{Binding RefreshCommand}"
                                    Content="Refresh" />
                        </Grid>
                        <Border Height="1"
                                Background="Black"
                                DockPanel.Dock="Bottom" />
                        <Grid DockPanel.Dock="Bottom">
                            <TextBlock Text="Double click to open by selected UIA." />
                        </Grid>
                        <Grid>
                            <ListBox x:Name="ProcessesListBox"
                                     ItemsSource="{Binding FilteredProcesses}"
                                     MouseDoubleClick="ProcessesListBoxOnMouseDoubleClick"
                                     SelectedItem="{Binding SelectedProcess}"
                                     Visibility="{Binding Processes.Count, Converter={StaticResource IntToVisibilityConverter}, ConverterParameter=GreaterThanZero}">
                                <ListBox.ItemTemplate>
                                    <DataTemplate DataType="{x:Type viewModels:ProcessWindowInfo}">
                                        <TextBlock>
                                            <Run Text="[" />
                                            <Run Text="{Binding ProcessId}" />
                                            <Run Text="] " />
                                            <Run Text="{Binding WindowTitle}" />
                                        </TextBlock>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            <TextBlock HorizontalAlignment="Center"
                                       VerticalAlignment="Center"
                                       Text="Loading ..."
                                       Visibility="{Binding Processes.Count, Converter={StaticResource IntToVisibilityConverter}, ConverterParameter=EqualsZero}" />
                        </Grid>
                    </DockPanel>
                </DockPanel>

                <Border Grid.Column="1"
                        Width="1"
                        Margin="8"
                        VerticalAlignment="Stretch"
                        Background="Black" />

                <StackPanel Grid.Column="2"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            IsEnabled="{Binding IsBusy, Converter={StaticResource InvertBooleanConverter}}"
                            Orientation="Vertical">
                    <StackPanel.Resources>
                        <Style TargetType="{x:Type Button}">
                            <Setter Property="Margin" Value="10" />
                        </Style>
                    </StackPanel.Resources>
                    <DockPanel LastChildFill="True">
                        <RadioButton x:Name="Uia2RadioButton"
                                     VerticalAlignment="Center"
                                     DockPanel.Dock="Left"
                                     GroupName="UiaVersion" />
                        <Button Padding="10"
                                Click="Uia2Click"
                                IsEnabled="{Binding ElementName=ProcessesListBox, Path=SelectedItem, Converter={StaticResource NullToVisibilityConverter}}">
                            <StackPanel Orientation="Vertical">
                                <Viewbox Width="48"
                                         Height="48"
                                         Stretch="Uniform">
                                    <ContentControl Content="{StaticResource Uia2Icon}" />
                                </Viewbox>
                                <TextBlock TextAlignment="Center">
                                    UIA2<LineBreak />
                                    Uia2Icon</TextBlock>
                            </StackPanel>
                        </Button>
                    </DockPanel>
                    <DockPanel LastChildFill="True">
                        <RadioButton x:Name="Uia3RadioButton"
                                     VerticalAlignment="Center"
                                     DockPanel.Dock="Left"
                                     GroupName="UiaVersion"
                                     IsChecked="True" />
                        <Button Padding="10"
                                Click="Uia3Click"
                                IsEnabled="{Binding ElementName=ProcessesListBox, Path=SelectedItem, Converter={StaticResource NullToVisibilityConverter}}">
                            <StackPanel Orientation="Vertical">
                                <Viewbox Width="48"
                                         Height="48"
                                         Stretch="Uniform">
                                    <ContentControl Content="{StaticResource Uia3Icon}" />
                                </Viewbox>
                                <TextBlock TextAlignment="Center">
                                    UIA3<LineBreak />
                                    Uia3Icon</TextBlock>
                            </StackPanel>
                        </Button>
                    </DockPanel>
                </StackPanel>
            </Grid>
        </DockPanel>
        <Grid Background="#aa000000"
              Visibility="{Binding DialogContent, Converter={StaticResource NullToVisibilityConverter}}">
            <DockPanel Margin="32"
                       Background="White"
                       LastChildFill="True">
                <Grid DockPanel.Dock="Bottom">
                    <Border Margin="2"
                            BorderBrush="Black"
                            BorderThickness="0,1,0,0">
                        <StackPanel HorizontalAlignment="Right"
                                    Orientation="Horizontal">
                            <StackPanel.Resources>
                                <system:Double x:Key="Width">50</system:Double>
                            </StackPanel.Resources>
                            <Button Width="{StaticResource Width}"
                                    Margin="4"
                                    Command="{Binding CloseSettingCommand}"
                                    Content="Close" />
                            <Button Width="{StaticResource Width}"
                                    Margin="4"
                                    Command="{Binding SaveSettingCommand}"
                                    Content="Save" />
                        </StackPanel>
                    </Border>
                </Grid>
                <ContentControl Content="{Binding DialogContent}" />
            </DockPanel>
        </Grid>
    </Grid>
</Window>