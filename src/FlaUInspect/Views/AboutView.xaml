<UserControl x:Class="FlaUInspect.Views.AboutView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:FlaUInspect.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="400"
             d:DesignWidth="600"
             Background="{DynamicResource PrimaryWindowBackgroundBrush}"
             FontSize="16"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/RibbonIcons.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <CubicEase x:Key="CubicOut"
                       EasingMode="EaseOut" />

            <Storyboard x:Key="PulseLine"
                        AutoReverse="True"
                        RepeatBehavior="Forever">
                <DoubleAnimation EasingFunction="{StaticResource CubicOut}"
                                 Storyboard.TargetProperty="Opacity"
                                 From="0.1"
                                 To="0.7"
                                 Duration="0:0:1.6" />
                <DoubleAnimation Storyboard.TargetProperty="StrokeDashOffset"
                                 From="0"
                                 To="-40"
                                 Duration="0:0:1.6" />
            </Storyboard>

            <Style x:Key="HudLine"
                   TargetType="Line">
                <Setter Property="StrokeThickness" Value="1" />
                <Setter Property="StrokeDashArray" Value="120 120" />
                <Setter Property="Opacity" Value="0" />
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid Margin="10">
            <Canvas x:Name="HudCanvas"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch" />
        </Grid>
        <Grid Width="400"
              Margin="0,32">
            <StackPanel>
                <Viewbox >
                    <ContentControl Content="{StaticResource FlaUiIcon}" 
                                    Foreground="{DynamicResource TextBrush}">
                        <ContentControl.Background>
                            <SolidColorBrush x:Name="FlaUiControlBrush"
                                            Color="#FFFFFFFF" />
                        </ContentControl.Background>
                    </ContentControl>
                </Viewbox>
               
                <Border Margin="0,0,0,16"
                        BorderBrush="{DynamicResource PrimaryBorderBrush}"
                        BorderThickness="0,1,0,0" />
                <TextBlock Margin="0,0,0,20"
                           FontSize="14"
                           Text="Version 3.0.0" />
                <TextBlock Margin="0,0,0,10"
                           Text="FlaUInspect is a UI inspection tool built on top of FlaUI."
                           TextWrapping="Wrap" />
            </StackPanel>
            <StackPanel HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Orientation="Vertical">
                <TextBlock HorizontalAlignment="Right"
                           Text="by Roman Roemer" />
                <TextBlock HorizontalAlignment="Right"
                           FontSize="16"
                           Text="by Kostiantyn Usenko {kDg}" />
                <TextBlock Margin="0,8,0,0"
                           HorizontalAlignment="Right"
                           FontSize="14"
                           Text="copyright FlaUI, 2026" />
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
