<UserControl x:Class="FlaUInspect.Views.SettingsWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:FlaUInspect.Views"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:FlaUInspect.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewModels:SettingsViewModel}"
             mc:Ignorable="d">
    <UserControl.Resources>
        <Style BasedOn="{StaticResource GroupBoxStyle}"
               TargetType="GroupBox">
            <Setter Property="Width" Value="250" />
            <Setter Property="Margin" Value="8" />
        </Style>
        
    </UserControl.Resources>
    <StackPanel>
        <GroupBox Width="250"
                  Margin="8"
                  HorizontalAlignment="Left"
                  Header="Theme"
                  Style="{StaticResource GroupBoxStyle}">
            <ComboBox ItemsSource="{Binding Themes}"
                      SelectedItem="{Binding Settings.Current.Theme}" />
        </GroupBox>
        <WrapPanel>
            <GroupBox Header="Application pick overlay">
                <local:OverlayView DataContext="{Binding Settings.Current.PickOverlay}" />
            </GroupBox>
            <GroupBox Header="Hover overlay">
                <local:OverlayView DataContext="{Binding Settings.Current.HoverOverlay}" />
            </GroupBox>
            <GroupBox Header="Selection overlay">
                <local:OverlayView DataContext="{Binding Settings.Current.SelectionOverlay}" />
            </GroupBox>
        </WrapPanel>
    </StackPanel>
</UserControl>